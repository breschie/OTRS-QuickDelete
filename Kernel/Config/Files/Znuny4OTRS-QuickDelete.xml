<?xml version="1.0" encoding="iso-8859-1" ?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="Ticket::Frontend::MenuModule###923-QuickDelete" Required="0" Valid="1">
        <Description Translatable="1">Shows a link in the menu to quick delete a ticket in the ticket zoom view of the agent interface.</Description>
        <Group>Znuny4OTRS-QuickDelete</Group>
        <SubGroup>Frontend::Agent::Ticket::MenuModule</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::TicketMenuGeneric</Item>
                <Item Key="Name">Quick Delete</Item>
                <Item Key="Description" Translatable="1">Delete this ticket</Item>
                <Item Key="Action">AgentTicketZnuny4OTRSQuickDelete</Item>
                <Item Key="Link">Action=AgentTicketZnuny4OTRSQuickDelete;TicketID=$QData{"TicketID"}</Item>
                <Item Key="Target"></Item>
                <Item Key="PopupType"></Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Ticket::Frontend::PreMenuModule###923-QuickDelete" Required="0" Valid="1">
        <Description Translatable="1">Shows a link in the menu to quick delete a ticket in every ticket overview of the agent interface.</Description>
        <Group>Znuny4OTRS-QuickDelete</Group>
        <SubGroup>Frontend::Agent::Ticket::MenuModulePre</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::TicketMenuGeneric</Item>
                <Item Key="Name">Quick Delete</Item>
                <Item Key="Action">AgentTicketZnuny4OTRSQuickDelete</Item>
                <Item Key="Description" Translatable="1">Delete this ticket</Item>
                <Item Key="Link">Action=AgentTicketZnuny4OTRSQuickDelete;TicketID=$QData{"TicketID"}</Item>
                <Item Key="Target"></Item>
                <Item Key="PopupType"></Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Znuny4OTRS::QuickDelete::Queue" Required="0" Valid="1">
        <Description Translatable="1">Defines the default delete queue for quick delete.</Description>
        <Group>Znuny4OTRS-QuickDelete</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="">Junk</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Module###AgentTicketZnuny4OTRSQuickDelete" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the agent interface.</Description>
        <Group>Znuny4OTRS-QuickDelete</Group>
        <SubGroup>Frontend::Agent::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Description>Ticket Delete</Description>
                <Title>Delete</Title>
                <NavBarName>Ticket</NavBarName>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>
</otrs_config>
